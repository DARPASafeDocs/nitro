include ../build/Makefile

#############################################
# C O M P I L E R
# The compiler + pretool
CC = @pretool@ @CC@
# What are we defining on the compile line?
CCDEFINES = @cc_defs@
# Dll Compile flags
DLLFLAGS = @dll_flags@
# Generic Compile Flags
CCFLAGS = @cc_flags@ @cc_unit_test_flags@
# Where do the includes live?
INCLUDEPATH = -I../include $(EXTINCLUDEPATH) @cc_includes@

# The compile command
COMPILE = $(CC) $(CCFLAGS) $(CCDEFINES) $(INCLUDEPATH)

#############################################
# A R C H I V E R
ARCHIVE = @AR@ @ar_flags@

#############################################
# L I N K E R
# Link flags
LFLAGS = @link_flags@
# THIS library's path
LIBDIR  = ../lib/@target@
# The testing directory
TESTDIR = @target@
# The general lib path
LIBRARYPATH = -L$(LIBDIR) $(EXTLIBPATH) @link_libpath@

# Libs to link with
LIBS = @link_prelibs@ $(EXTLIBS) @link_unit_test_libs@ @link_autolibs@ @link_postlibs@

# The link suffixes
LINK = $(LIBRARYPATH) $(LFLAGS) $(LIBS)

OBJS   = $(UNIT_TEST_MAIN:.c=.o)
EXE    = $(UNIT_TEST_MAIN:.c=)

all: $(EXE)

$(EXE):  $(OBJS) $(UNIT_TESTS) testdir
	$(COMPILE) -o $@ $@.o $(UNIT_TESTS) $(LINK)
	mv $@ $(TESTDIR)

testdir:
	\mkdir -p $(TESTDIR)

doxy: 
	doxygen ../Doxyfile

clean: 
	perl -w @build_dir@/rfk.pl -f	

fresh:  clean
	make all


.SUFFIXES: .o .c
.c.o:
	$(COMPILE) -c $<


